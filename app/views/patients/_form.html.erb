<%= form_with model: @patient do |form| %>
    <%= form.label :first_name, "First name: " %>
    <%= form.text_field :first_name %><br><br>

    <%= form.label :last_name, "Last name: " %>
    <%= form.text_field :last_name %><br><br>

    <%= form.label :age, "Age: " %>
    <%= form.number_field :age, step: 1 %><br><br>

    Sex:
    <%= form.radio_button :sex, "Male" %>
    <%= form.label :sex_male, "Male" %>
    <%= form.radio_button :sex, "Female" %>
    <%= form.label :sex_female, "Female" %><br><br>

    <%= form.label :medical_notes, "Medical notes: " %>
    <%= form.text_area :medical_notes, size: "40x3" %><br><br>

    <%= form.label :provider_id, "Provider: " %>
    <%= form.number_field :provider_id %><br><br>

    <%= submit_tag("Submit") %>
<% end %>